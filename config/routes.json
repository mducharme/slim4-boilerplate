{
  "routes": {
    "defined-controller-example": {
      "type": "controller",
      "controller": "home",
      "methods": ["GET"]
    },
    "view-example": {
      "type": "view",
      "template": "home",
      "view": "home"
    },
    "redirection-example": {
      "type": "redirection",
      "target": "/redirection-target-example"
    },
    "proxy-example": {
      "type": "proxy",
      "url": "https://locomotive.ca",
      "requestOptions": {
        "xdebug": true
      }
    },
    "json1": {
      "type": "json",
      "context": "json1",
      "methods": ["GET"]
    },
    "json2": {
      "type": "json",
      "context": "json2",
      "methods": ["GET"]
    },
    "json3": {
      "type": "json",
      "context": "json3",
      "methods": ["GET"]
    },
    "redirection-target-example": {
      "type": "json",
      "methods": ["GET"],
      "context": "json3",
      "options": {
        "redirect": "From redirection"
      }
    },
    "controller-class-example": {
      "methods": ["GET"],
      "controller": "app/controllers/foo"

    }

  }
}